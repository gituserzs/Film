<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>tologin</servlet-name>
    <servlet-class>com.zs.controller.ToLogin</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>tologin</servlet-name>
    <url-pattern>/tologin</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.zs.controller.Login</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>film</servlet-name>
    <servlet-class>com.zs.controller.Film</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>film</servlet-name>
    <url-pattern>/film</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ToInsert</servlet-name>
    <servlet-class>com.zs.controller.ToInsert</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ToInsert</servlet-name>
    <url-pattern>/toinsert</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Insert</servlet-name>
    <servlet-class>com.zs.controller.Insert</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Insert</servlet-name>
    <url-pattern>/insert</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Delete</servlet-name>
    <servlet-class>com.zs.controller.Delete</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Delete</servlet-name>
    <url-pattern>/delete</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ToUpdate</servlet-name>
    <servlet-class>com.zs.controller.ToUpdate</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ToUpdate</servlet-name>
    <url-pattern>/toupdate</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Update</servlet-name>
    <servlet-class>com.zs.controller.Update</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Update</servlet-name>
    <url-pattern>/update</url-pattern>
  </servlet-mapping>


  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>com.zs.filter.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
